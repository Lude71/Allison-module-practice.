def atm():
    balance = 1000  # starting balance
    pin = "1234"

    entered_pin = input("Enter your PIN: ")
    if entered_pin != pin:
        print("âŒ Incorrect PIN.")
        return

    while True:
        print("\n==== ATM Menu ====")
        print("1. Check Balance")
        print("2. Deposit")
        print("3. Withdraw")
        print("4. Exit")

        choice = input("Choose an option (1â€“4): ")

        if choice == "1":
            print(f"ğŸ’° Your balance is: KES {balance}")
        elif choice == "2":
            amount = float(input("Enter amount to deposit: "))
            balance += amount
            print("âœ… Deposit successful.")
        elif choice == "3":
            amount = float(input("Enter amount to withdraw: "))
            if amount > balance:
                print("âŒ Insufficient balance.")
            else:
                balance -= amount
                print("âœ… Withdrawal successful.")
        elif choice == "4":
            print("ğŸ‘‹ Thank you for using the ATM.")
            break
        else:
            print("âŒ Invalid choice.")

atm()